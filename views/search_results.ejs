<%- include("partials/header") %>

<!-- Add search navbar
-button for -movie info which reidrect to the single_movie_info.ejsfile


-->
  
	<% data['results'].forEach(movie => {%>
			<div class="card-header">
			  <div class="row pt-3">
				<div class="col-md-3 col-sm-3 col-xs-3">
				  <div class="card-image pt-3">
					<img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/<%=movie.poster_path%>" alt="Image" class="image-size" style="border-radius:15px;width:300px;height:300px;">
				  </div>
				</div>

				<div class="col-md-6 col-sm-6 col-xs-3">
				  <h4 class="text-warning p-1"><strong><%=movie.title%></strong></h4>
				  <hr>
				  <p class="text-white"><%=movie.overview %></p><br>
				  <button class="btn btn-info btn-sm"><a class="button" href="/single_movie_info/<%=movie.id%>">Info</a></button>
				</div>
				<div class="col-md-3 col-sm-3 col-xs-3">
				  <p class="badge  badge-warning text-white">Popularity: <strong><%=movie.popularity%></strong></p>
				  <hr>
				  <p class="badge  badge-warning text-white">Votes: <strong><%=movie.vote_average%></strong></p>
				  <hr>
				  <div><span class="badge  badge-warning text-white">Release: <strong><%=movie.release_date%></strong></span></div>
				</div>
			  </div>
			</div>
		  <%});%> 
<script src="/bootstrap-4.5.2-dist/js/bootstrap.min.js"></script>
<%- include("partials/footer") %>